<!-- About Hero Section -->
<section class="about-hero-section position-relative">
    <div class="hero-image-container">
        <img src="/images/customer/about-hero.jpg" alt="About Baklovah" class="hero-image">
        <div class="hero-overlay"></div>
    </div>
    <div class="container position-relative hero-content text-center">
        <h1 class="display-4 fw-bold text-white mb-3">Our Story</h1>
        <p class="lead text-white mb-4">Learn about our journey, our passion, and our commitment to authentic Middle Eastern cuisine</p>
    </div>
