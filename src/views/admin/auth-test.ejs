<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authentication Test</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Authentication Diagnostic</h3>
                    </div>
                    <div class="card-body">
                        <h4>User Information</h4>
                        <pre id="userInfo">Loading...</pre>

                        <h4 class="mt-4">Cookie Status</h4>
                        <pre id="cookieInfo">Loading...</pre>

                        <div class="mt-4">
                            <a href="/admin/dashboard" class="btn btn-primary">Try Dashboard</a>
                            <a href="/admin" class="btn btn-secondary ms-2">Back to Login</a>
                            <button id="clearCookies" class="btn btn-danger ms-2">Clear Cookies</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Display user info
        document.getElementById('userInfo').textContent = JSON.stringify(
            typeof user !== 'undefined' && user ? JSON.stringify(user) : 'null' , 
            null, 
            2
        );

        // Display all cookies
        document.getElementById('cookieInfo').textContent = document.cookie || 'No cookies found';

        // Clear cookies button
        document.getElementById('clearCookies').addEventListener('click', function() {
            // Clear all cookies
            document.cookie.split(";").forEach(function(c) {
                document.cookie = c.replace(/^ +/, "").replace(/=.*/, "=;expires=" + new Date().toUTCString() + ";path=/");
            });
            
            // Reload the page
            window.location.reload();
        });
    </script>
</body>
</html>
